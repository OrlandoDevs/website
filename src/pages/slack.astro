---
import MainLayout from "../layouts/MainLayout.astro";
import { fade } from "astro:transitions";
---

<MainLayout title="Join Our Slack!">
  <div
    class="p-6 mb-7 text-slate-300 text-xl mx-6"
    transition:animate={fade({ duration: "0.4s" })}
  >
    <h2
      class="bg-gradient-to-r from-cyan-300 to-white pb-2 text-transparent bg-clip-text text-5xl text-center border-b-2 border-solid border-[#ABA1A1]"
    >
      Want to be part of the conversation?
    </h2>
    <section class="my-8 flex flex-col justify-center text-center">
      <p class="pb-4 text-xl">
        Our Slack is invite-only. To receive an invitation, please fill out the
        form below, and we'll get back to you as soon as possible.
      </p>
      <div class="rounded-xl">
        <div class="invert-[.90]">
          <div class="hue-rotate-[10deg] saturate-[75%] brightness-[110%]">
            <iframe
              class="min-w-full min-h-screen py-8 border-none"
              src="https://docs.google.com/forms/d/e/1FAIpQLScGE61vu8JV5C2BC5Wp9BsH_5od4yl9UG4NhofD1IJopBNAjw/viewform?embedded=true"
            >
              Loading...
            </iframe>
          </div>
        </div>
      </div>
    </section>
  </div>
</MainLayout>
