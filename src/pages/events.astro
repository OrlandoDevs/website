---
import MainLayout from "../layouts/MainLayout.astro";
import EventList from "../components/EventList.astro";
import { getCollection } from "astro:content";

const events = await getCollection("events");
---

<MainLayout title="ODevs Events">
  <div class="flex flex-col text-center min-h-full">
    <h1
      class="bg-gradient-to-r from-cyan-300 to-white text-transparent bg-clip-text text-7xl text-center border-b-2 border-solid border-[#ABA1A1] lg:mt-10 mb-20 pb-4"
    >
      Events
    </h1>
    <div class="flex flex-wrap flex-row gap-10 justify-center mb-24">
      <EventList events={events} />
    </div>
  </div>
</MainLayout>
