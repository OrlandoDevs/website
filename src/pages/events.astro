---
import MainLayout from "../layouts/MainLayout.astro";
import EventList from "../components/EventList.astro";
import { getCollection } from "astro:content";

const events = await getCollection("events");
---

<MainLayout title="ODevs Events">
  <div class="flex flex-col text-center min-h-full mx-6">
    <h1
      class="bg-gradient-to-r from-cyan-300 to-white text-transparent bg-clip-text text-5xl lg:text-7xl text-center border-b-2 border-solid border-[#ABA1A1] lg:mt-10 mb-20 pb-4"
    >
      Upcoming Events
    </h1>
    <div
      class="flex flex-wrap flex-row gap-y-8 lg:gap-32 justify-center mb-24 lg:mx-4"
    >
      <EventList events={events} />
    </div>
    <button class="btn bg-[#2c9db1] text-white mb-16 border-none self-center"
      ><a href={`/prev-events`}>Previous Events</a></button
    >
  </div>
</MainLayout>
