---
import MainLayout from "../layouts/MainLayout.astro";
import SponsorList from "../components/SponsorList.astro";
import { fade } from "astro:transitions";
---

<MainLayout title="Sponsors">
  <div
    class="p-6 mb-7 text-slate-300 text-xl mx-6"
    transition:animate={fade({ duration: "0.4s" })}
  >
    <h1
      class="text-center text-4xl lg:text-5xl border-b-2 border-[#ABA1A1] py-3 bg-gradient-to-r from-cyan-300 to-white text-transparent bg-clip-text"
    >
      Our Community Sponsors!
    </h1>
    <div class="flex flex-col gap-y-8 py-10">
      <SponsorList />
    </div>
  </div>
</MainLayout>
