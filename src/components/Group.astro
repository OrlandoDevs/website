---
import { type CollectionEntry } from "astro:content";

type Props = {
  group: CollectionEntry<"groups">;
};

const { group } = Astro.props;
---

<div
  class="flex flex-col text-center justify-center items-center rounded-xl shadow-lg text-slate-200 shadow-slate-800 h-full bg-[#0E5F7C] bg-opacity-20 overflow-hidden"
>
  <a
    href={`/groups/${group.slug}`}
    class="text-5xl text-slate-200 font-semibold inline-block my-8"
  >
    <h2>{group.data.title}</h2>
  </a>
  <a href={`/groups/${group.slug}`}>
    <img
      src={group.data.groupLogo}
      alt={group.data.title}
      class="rounded-2xl shadow-xl mb-8 object-cover h-48 max-w-[270px] lg:w-full"
    /></a
  >

  <p
    class="text-slate-300 text-lg lg:text-2xl line-clamp-2 mb-6 px-8 w-full text-left text-ellipsis overflow-hidden"
  >
    {group.body}
  </p>
</div>
